<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <View
                android:id="@+id/view_top"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:paddingLeft="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_cross"
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:src="@drawable/cross"
                app:tint="@color/black"
                android:layout_gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_below="@+id/ll_cross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/share"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"

                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_share1"
            android:layout_below="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shareed list"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:id="@+id/ll_krishan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Krishna"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tv_remove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/pink"
                    android:gravity="end"
                    android:textSize="20dp"/>
            </LinearLayout>
            <View

                android:id="@+id/view"
                android:layout_below="@id/ll_krishan"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#D4D4D4"/>
            <LinearLayout
                android:id="@+id/ll_krishan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amit"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tv_remove1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/pink"
                    android:gravity="end"
                    android:textSize="20dp"/>
            </LinearLayout>
            <View
                android:visibility="gone"
                android:id="@+id/view6"
                android:layout_below="@id/ll_krishan1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#D4D4D4"/>
        </LinearLayout>
        <View

            android:id="@+id/view2"
            android:layout_below="@id/ll_share1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4"/>
        <LinearLayout
            android:id="@+id/ll_createpdf"
            android:layout_below="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                app:tint="@color/pink"
                android:src="@drawable/file_blank_outline"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create PDF"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>
        <View

            android:id="@+id/view3"
            android:layout_below="@id/ll_createpdf"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4"/>
        <LinearLayout
            android:id="@+id/ll_moveto"
            android:layout_below="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                app:tint="@color/pink"
                android:src="@drawable/icon_moveto"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move to"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>
        <View

            android:id="@+id/view4"
            android:layout_below="@id/ll_moveto"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4"/>
        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_below="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                app:tint="@color/pink"
                android:src="@drawable/trash_full"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>
        <View

            android:id="@+id/view5"
            android:layout_below="@id/ll_delete"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#D4D4D4"/>
        <LinearLayout
            android:id="@+id/ll_msg"
            android:layout_below="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last edit by   Krishna on 2nd Feb 2021 "
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
